#:import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/bg4.jpg'
    menu_widget: menu_widget
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget
    Label:
        font_size: dp(40)
        font_name: 'fonts/Eurostile.ttf'
        text: root.score_txt
        size_hint: 0.15, 0.2
        pos_hint: {"x": 0, "top": 1}