
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(80)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": 0.5, "center_y": 0.6}
    Button:
        font_size: dp(40)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: { "center_x": 0.5, "center_y": 0.3}
        size_hint: .25, .13
        on_press: root.parent.on_menu_button_press()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: "EASY"
        pos_hint: { "center_x": 0.85, "center_y": 0.4}
        size_hint: .15, .08
        on_press: root.parent.on_difficulty_level_button_press('easy')
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: "MEDIUM"
        pos_hint: { "center_x": 0.85, "center_y": 0.3}
        size_hint: .15, .08
        on_press: root.parent.on_difficulty_level_button_press('medium')
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: "HARD"
        pos_hint: { "center_x": 0.85, "center_y": 0.2}
        size_hint: .15, .08
        on_press: root.parent.on_difficulty_level_button_press('hard')
        background_normal: ''
        background_color: 1, .3, .4, .85
